@model Task4.Domain.ViewModels.LoginRegister.RegisterViewModel

@{
    Layout = "_Layout";
    ViewBag.Title = "Register";
}

<section>
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="card-header">
                            <h3 class="mb-0 text-center ParagraphHome">Registration</h3>
                        </div>                        
                        <div class="card-body">
                            <form autocomplete="on" method="post" asp-controller="LoginRegister" asp-action="Register">
                                <div asp-validation-summary="All" class="text-danger text-center"></div>
                                <div class="form-outline mb-4">
                                    <p class="form-label text-start">Username</p>
                                    <input asp-for="UserName" class="form-control" type="text">
                                </div>
                                <div class="form-outline mb-4">
                                    <p class="form-label text-start">Email</p>
                                    <input asp-for="Email" class="form-control" type="text">
                                </div>
                                <div class="form-outline mb-4">
                                    <p class="form-label text-start">Password</p>
                                    <input autocomplete="new-password" asp-for="Password" class="form-control" type="password">
                                </div>
                                <div class="form-outline mb-4">
                                    <p class="form-label text-start">Confirm Password</p>
                                    <input autocomplete="new-password" asp-for="PasswordConfirm" class="form-control" type="password">
                                </div>
                                <div>
                                    <button class="btn btn-lg btn-primary w-100" type="submit">Register</button>
                                    <p class="mt-2">Already have an accaunt? <a asp-controller="LoginRegister" asp-action="Login" type="button">Log in!</a></p>
                                </div>
                                
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>